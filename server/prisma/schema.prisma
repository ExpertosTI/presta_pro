generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  isVerified          Boolean   @default(true)
  verificationToken   String?   @unique
  verificationExpiresAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relaciones existentes
  users     User[]
  collectors Collector[]
  clients    Client[]
  loans      Loan[]
  receipts   Receipt[]
  subscription Subscription?
  usages     Usage[]
  expenses   Expense[]
  notes      Note[]
  loanRequests LoanRequest[]
  employees  Employee[]
  routeClosings RouteClosing[]
  settings   Json?
  
  // NUEVAS relaciones para módulos
  notifications     Notification[]
  emailPreference   EmailPreference?
  scheduledReports  ScheduledReport[]
  
  // Campos de administración
  suspendedAt    DateTime?
  suspendedBy    String?
  suspendReason  String?
  adminNotes     String?    // Notas del admin
  tags           String[]   // Tags para filtrar
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  role         String
  googleId     String?  // ID de Google para OAuth
  photoUrl     String?  // URL de la foto de perfil
  tenant       Tenant   @relation(fields: [tenantId], references: [id])
  tenantId     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Collector {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  photoUrl  String?
  
  // Autenticación
  email        String?
  username     String?
  passwordHash String?
  isActive     Boolean   @default(true)
  lastLoginAt  DateTime?
  
  // Permisos (JSON con flags)
  permissions  Json      @default("{}")
  
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clients   Client[]
  routeClosings RouteClosing[]
  activities    CollectorActivity[]
  
  @@unique([tenantId, username])
}

model Client {
  id          String     @id @default(cuid())
  name        String
  phone       String?
  address     String?
  idNumber    String?    // Cédula / DNI
  email       String?
  notes       String?
  photoUrl    String?
  score       Int        @default(70)
  collector   Collector? @relation(fields: [collectorId], references: [id])
  collectorId String?
  tenant      Tenant     @relation(fields: [tenantId], references: [id])
  tenantId    String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  loans       Loan[]
  receipts    Receipt[]
  loanRequests LoanRequest[]
  documents   ClientDocument[]
}

model Loan {
  id            String            @id @default(cuid())
  tenant        Tenant            @relation(fields: [tenantId], references: [id])
  tenantId      String
  client        Client            @relation(fields: [clientId], references: [id])
  clientId      String
  amount        Float
  closingCosts  Float             @default(0)
  rate          Float
  term          Int
  frequency     String
  startDate     DateTime
  status        String            @default("ACTIVE")
  totalInterest Float             @default(0)
  totalPaid     Float             @default(0)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  installments  LoanInstallment[]
  receipts      Receipt[]
}

model LoanInstallment {
  id         String   @id @default(cuid())
  loan       Loan     @relation(fields: [loanId], references: [id])
  loanId     String
  number     Int
  date       DateTime
  payment    Float
  interest   Float
  principal  Float
  balance    Float
  status     String   @default("PENDING")
  paidAmount Float?
  paidDate   DateTime?
}

model Receipt {
  id                String   @id @default(cuid())
  tenant            Tenant   @relation(fields: [tenantId], references: [id])
  tenantId          String
  loan              Loan     @relation(fields: [loanId], references: [id])
  loanId            String
  client            Client?  @relation(fields: [clientId], references: [id])
  clientId          String?
  amount            Float
  penaltyAmount     Float    @default(0)
  installmentNumber Int
  installmentDate   DateTime?
  loanAmount        Float?
  totalPaidAfter    Float?
  remainingBalance  Float?
  withPenalty       Boolean  @default(false)
  date              DateTime @default(now())
  createdAt         DateTime @default(now())
}

// ============================================
// SUBSCRIPTION SYSTEM
// ============================================

enum SubscriptionPlan {
  FREE
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  PENDING
  EXPIRED
  CANCELLED
  SUSPENDED
}

enum PaymentMethod {
  PAYPAL
  AZUL
  BANK_TRANSFER
  CASH
}

enum PaymentStatus {
  PENDING
  VERIFIED
  REJECTED
  REFUNDED
}

model Subscription {
  id        String             @id @default(cuid())
  tenantId  String             @unique
  tenant    Tenant             @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  plan      SubscriptionPlan   @default(FREE)
  status    SubscriptionStatus @default(PENDING)
  
  // Períodos
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  trialEndsAt        DateTime?
  
  // Configuración
  autoRenew          Boolean   @default(false)
  cancelledAt        DateTime?
  cancelReason       String?
  
  // Límites específicos del plan (JSON para flexibilidad)
  limits    Json      @default("{\"maxClients\":10,\"maxLoans\":5,\"maxUsers\":1,\"aiQueries\":0}")
  
  // Auditoría
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  payments  Payment[]
  usage     Usage[]
  
  @@index([status])
  @@index([currentPeriodEnd])
}

model Payment {
  id             String        @id @default(cuid())
  subscriptionId String
  subscription   Subscription  @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  
  // Monto
  amount         Float
  currency       String        @default("DOP")
  plan           SubscriptionPlan
  interval       String        // 'monthly' | 'yearly'
  
  // Método y estado
  method         PaymentMethod
  status         PaymentStatus @default(PENDING)
  
  // Comprobante (para banco/efectivo)
  proofImageUrl  String?
  referenceNumber String?      @unique
  
  // IDs de transacción externa (PayPal/Carnet)
  externalTransactionId String? @unique
  externalPayerId       String?
  externalData          Json?   // Datos completos del webhook
  
  // Verificación manual
  verifiedBy     String?
  verifiedAt     DateTime?
  rejectedReason String?
  notes          String?       @db.Text
  
  // Auditoría
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  
  @@index([status])
  @@index([subscriptionId])
  @@index([externalTransactionId])
}

model Usage {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  // Período (formato: YYYY-MM)
  month     String
  
  // Contadores
  clientsCount   Int @default(0)
  loansCount     Int @default(0)
  usersCount     Int @default(0)
  aiQueriesCount Int @default(0)
  documentsCount Int @default(0)
  
  // Auditoría
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])
  
  @@unique([tenantId, month])
  @@index([month])
}

model AuditLog {
  id        String   @id @default(cuid())
  
  // Usuario que realizó la acción
  userId    String?
  tenantId  String?
  
  // Acción
  action    String   // 'subscription.created', 'payment.verified', etc.
  resource  String   // 'subscription', 'payment', etc.
  resourceId String?
  
  // Detalles
  details   Json?
  
  // Contexto
  ipAddress String?
  userAgent String?
  
  createdAt DateTime @default(now())
  
  @@index([tenantId])
  @@index([action])
  @@index([createdAt])
}

// ============================================
// ADDITIONAL BUSINESS MODELS
// ============================================

model Expense {
  id          String   @id @default(cuid())
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  amount      Float
  description String?
  category    String?
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([tenantId])
  @@index([date])
}

model Note {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  text      String   @db.Text
  createdAt DateTime @default(now())
  
  @@index([tenantId])
}

model LoanRequest {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id])
  amount    Float
  rate      Float
  term      Int
  frequency String
  startDate DateTime?
  status    String   @default("REVIEW") // REVIEW, APPROVED, REJECTED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([tenantId])
  @@index([status])
}

model Employee {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  name      String
  phone     String?
  email     String?
  position  String?
  salary    Float?
  hireDate  DateTime?
  photoUrl  String?
  status    String   @default("ACTIVE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([tenantId])
}

model RouteClosing {
  id            String     @id @default(cuid())
  tenantId      String
  tenant        Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  collectorId   String?
  collector     Collector? @relation(fields: [collectorId], references: [id])
  date          DateTime
  totalAmount   Float
  receiptsCount Int
  notes         String?
  createdAt     DateTime   @default(now())
  
  @@index([tenantId])
  @@index([date])
}

model ClientDocument {
  id        String   @id @default(cuid())
  tenantId  String
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  type      String   // 'UPLOAD' | 'TEMPLATE'
  title     String
  content   String?  @db.Text
  fileName  String?
  mimeType  String?
  dataUrl   String?  @db.Text
  createdAt DateTime @default(now())
  
  @@index([clientId])
  @@index([tenantId])
}

// ============================================
// NOTIFICATION & EMAIL SYSTEM
// ============================================

model Notification {
  id          String   @id @default(cuid())
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  userId      String?  // null = para todos los usuarios del tenant
  type        String   // PAYMENT_DUE, PAYMENT_RECEIVED, REPORT, SYSTEM, SUBSCRIPTION
  title       String
  message     String
  read        Boolean  @default(false)
  actionUrl   String?  // URL a donde enviar al hacer click
  data        Json?    // Metadata adicional
  createdAt   DateTime @default(now())
  
  @@index([tenantId, read])
  @@index([userId])
  @@index([createdAt])
}

model EmailPreference {
  id               String   @id @default(cuid())
  tenantId         String   @unique
  tenant           Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  // Reportes
  dailyReport      Boolean  @default(true)
  weeklyReport     Boolean  @default(true)
  monthlyReport    Boolean  @default(true)
  reportHour       Int      @default(8)   // Hora del día para enviar (0-23)
  reportEmail      String?  // Email alternativo para reportes
  
  // Alertas
  paymentReminders Boolean  @default(true)
  overdueAlerts    Boolean  @default(true)
  subscriptionAlerts Boolean @default(true)
  
  // Configuración
  reminderDaysBefore Int     @default(3)  // Días antes de vencimiento para recordar
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model ScheduledReport {
  id          String   @id @default(cuid())
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  type        String   // DAILY, WEEKLY, MONTHLY
  lastSentAt  DateTime?
  nextRunAt   DateTime
  status      String   @default("ACTIVE") // ACTIVE, PAUSED, ERROR
  errorMessage String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([nextRunAt, status])
  @@index([tenantId])
}

// ============================================
// COLLECTOR ACTIVITY TRACKING
// ============================================

model CollectorActivity {
  id           String    @id @default(cuid())
  collectorId  String
  collector    Collector @relation(fields: [collectorId], references: [id], onDelete: Cascade)
  tenantId     String
  
  action       String    // LOGIN, LOGOUT, PAYMENT_REGISTERED, CLIENT_VISITED, ROUTE_STARTED, ROUTE_FINISHED
  clientId     String?
  loanId       String?
  receiptId    String?
  details      Json?     // Detalles adicionales
  
  // Tracking
  ipAddress    String?
  deviceInfo   String?
  location     Json?     // { lat, lng, accuracy }
  
  createdAt    DateTime  @default(now())
  
  @@index([collectorId, createdAt])
  @@index([tenantId, createdAt])
  @@index([action])
}

// ============================================
// ADMIN PANEL & AUDIT
// ============================================

model AdminLog {
  id          String   @id @default(cuid())
  adminId     String   // ID del admin que realizó la acción
  adminEmail  String   // Email para referencia
  
  action      String   // VERIFY_PAYMENT, REJECT_PAYMENT, SUSPEND_TENANT, ACTIVATE_TENANT, UPDATE_PLAN, etc.
  targetType  String   // TENANT, PAYMENT, USER, SUBSCRIPTION
  targetId    String
  
  // Detalles
  previousValue Json?   // Valor antes del cambio
  newValue      Json?   // Valor después del cambio
  reason        String? // Razón del cambio (especialmente para rechazos/suspensiones)
  
  // Tracking
  ipAddress   String?
  userAgent   String?
  
  createdAt   DateTime @default(now())
  
  @@index([adminId])
  @@index([targetType, targetId])
  @@index([action])
  @@index([createdAt])
}

// ============================================
// EMAIL TEMPLATES (Dynamic)
// ============================================

model EmailTemplate {
  id          String   @id @default(cuid())
  tenantId    String?  // null = template global/sistema
  
  slug        String   // payment-confirmation, payment-reminder, etc.
  name        String   // Nombre descriptivo
  subject     String   // Asunto del email
  htmlContent String   @db.Text  // HTML template
  textContent String?  @db.Text  // Versión texto plano
  
  // Variables disponibles
  variables   Json?    // Lista de variables que acepta el template
  
  isActive    Boolean  @default(true)
  isSystem    Boolean  @default(false)  // Templates del sistema no editables
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([tenantId, slug])
  @@index([slug])
}

