generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  isVerified          Boolean   @default(true)
  verificationToken   String?   @unique
  verificationExpiresAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  collectors Collector[]
  clients    Client[]
  loans      Loan[]
  receipts   Receipt[]
  subscription Subscription?
  usages     Usage[]
  expenses   Expense[]
  notes      Note[]
  loanRequests LoanRequest[]
  employees  Employee[]
  routeClosings RouteClosing[]
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  role         String
  googleId     String?  // ID de Google para OAuth
  photoUrl     String?  // URL de la foto de perfil
  tenant       Tenant   @relation(fields: [tenantId], references: [id])
  tenantId     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Collector {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clients   Client[]
  routeClosings RouteClosing[]
}

model Client {
  id          String     @id @default(cuid())
  name        String
  phone       String?
  address     String?
  idNumber    String?    // Cédula / DNI
  email       String?
  notes       String?
  photoUrl    String?
  score       Int        @default(70)
  collector   Collector? @relation(fields: [collectorId], references: [id])
  collectorId String?
  tenant      Tenant     @relation(fields: [tenantId], references: [id])
  tenantId    String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  loans       Loan[]
  receipts    Receipt[]
  loanRequests LoanRequest[]
  documents   ClientDocument[]
}

model Loan {
  id            String            @id @default(cuid())
  tenant        Tenant            @relation(fields: [tenantId], references: [id])
  tenantId      String
  client        Client            @relation(fields: [clientId], references: [id])
  clientId      String
  amount        Float
  rate          Float
  term          Int
  frequency     String
  startDate     DateTime
  status        String            @default("ACTIVE")
  totalInterest Float             @default(0)
  totalPaid     Float             @default(0)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  installments  LoanInstallment[]
  receipts      Receipt[]
}

model LoanInstallment {
  id         String   @id @default(cuid())
  loan       Loan     @relation(fields: [loanId], references: [id])
  loanId     String
  number     Int
  date       DateTime
  payment    Float
  interest   Float
  principal  Float
  balance    Float
  status     String   @default("PENDING")
  paidAmount Float?
  paidDate   DateTime?
}

model Receipt {
  id                String   @id @default(cuid())
  tenant            Tenant   @relation(fields: [tenantId], references: [id])
  tenantId          String
  loan              Loan     @relation(fields: [loanId], references: [id])
  loanId            String
  client            Client?  @relation(fields: [clientId], references: [id])
  clientId          String?
  amount            Float
  penaltyAmount     Float    @default(0)
  installmentNumber Int
  installmentDate   DateTime?
  loanAmount        Float?
  totalPaidAfter    Float?
  remainingBalance  Float?
  withPenalty       Boolean  @default(false)
  date              DateTime @default(now())
  createdAt         DateTime @default(now())
}

// ============================================
// SUBSCRIPTION SYSTEM
// ============================================

enum SubscriptionPlan {
  FREE
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  PENDING
  EXPIRED
  CANCELLED
  SUSPENDED
}

enum PaymentMethod {
  PAYPAL
  AZUL
  BANK_TRANSFER
  CASH
}

enum PaymentStatus {
  PENDING
  VERIFIED
  REJECTED
  REFUNDED
}

model Subscription {
  id        String             @id @default(cuid())
  tenantId  String             @unique
  tenant    Tenant             @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  plan      SubscriptionPlan   @default(FREE)
  status    SubscriptionStatus @default(PENDING)
  
  // Períodos
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  trialEndsAt        DateTime?
  
  // Configuración
  autoRenew          Boolean   @default(false)
  cancelledAt        DateTime?
  cancelReason       String?
  
  // Límites específicos del plan (JSON para flexibilidad)
  limits    Json      @default("{\"maxClients\":10,\"maxLoans\":5,\"maxUsers\":1,\"aiQueries\":0}")
  
  // Auditoría
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  payments  Payment[]
  usage     Usage[]
  
  @@index([status])
  @@index([currentPeriodEnd])
}

model Payment {
  id             String        @id @default(cuid())
  subscriptionId String
  subscription   Subscription  @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  
  // Monto
  amount         Float
  currency       String        @default("DOP")
  plan           SubscriptionPlan
  interval       String        // 'monthly' | 'yearly'
  
  // Método y estado
  method         PaymentMethod
  status         PaymentStatus @default(PENDING)
  
  // Comprobante (para banco/efectivo)
  proofImageUrl  String?
  referenceNumber String?      @unique
  
  // IDs de transacción externa (PayPal/Carnet)
  externalTransactionId String? @unique
  externalPayerId       String?
  externalData          Json?   // Datos completos del webhook
  
  // Verificación manual
  verifiedBy     String?
  verifiedAt     DateTime?
  rejectedReason String?
  notes          String?       @db.Text
  
  // Auditoría
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  
  @@index([status])
  @@index([subscriptionId])
  @@index([externalTransactionId])
}

model Usage {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  // Período (formato: YYYY-MM)
  month     String
  
  // Contadores
  clientsCount   Int @default(0)
  loansCount     Int @default(0)
  usersCount     Int @default(0)
  aiQueriesCount Int @default(0)
  documentsCount Int @default(0)
  
  // Auditoría
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])
  
  @@unique([tenantId, month])
  @@index([month])
}

model AuditLog {
  id        String   @id @default(cuid())
  
  // Usuario que realizó la acción
  userId    String?
  tenantId  String?
  
  // Acción
  action    String   // 'subscription.created', 'payment.verified', etc.
  resource  String   // 'subscription', 'payment', etc.
  resourceId String?
  
  // Detalles
  details   Json?
  
  // Contexto
  ipAddress String?
  userAgent String?
  
  createdAt DateTime @default(now())
  
  @@index([tenantId])
  @@index([action])
  @@index([createdAt])
}

// ============================================
// ADDITIONAL BUSINESS MODELS
// ============================================

model Expense {
  id          String   @id @default(cuid())
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  amount      Float
  description String?
  category    String?
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([tenantId])
  @@index([date])
}

model Note {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  text      String   @db.Text
  createdAt DateTime @default(now())
  
  @@index([tenantId])
}

model LoanRequest {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id])
  amount    Float
  rate      Float
  term      Int
  frequency String
  startDate DateTime?
  status    String   @default("REVIEW") // REVIEW, APPROVED, REJECTED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([tenantId])
  @@index([status])
}

model Employee {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  name      String
  phone     String?
  email     String?
  position  String?
  salary    Float?
  hireDate  DateTime?
  photoUrl  String?
  status    String   @default("ACTIVE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([tenantId])
}

model RouteClosing {
  id            String     @id @default(cuid())
  tenantId      String
  tenant        Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  collectorId   String?
  collector     Collector? @relation(fields: [collectorId], references: [id])
  date          DateTime
  totalAmount   Float
  receiptsCount Int
  notes         String?
  createdAt     DateTime   @default(now())
  
  @@index([tenantId])
  @@index([date])
}

model ClientDocument {
  id        String   @id @default(cuid())
  tenantId  String
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  type      String   // 'UPLOAD' | 'TEMPLATE'
  title     String
  content   String?  @db.Text
  fileName  String?
  mimeType  String?
  dataUrl   String?  @db.Text
  createdAt DateTime @default(now())
  
  @@index([clientId])
  @@index([tenantId])
}
