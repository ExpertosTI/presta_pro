{
  "name": "presta-pro",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "version": "0.0.0",
  "description": "Presta Pro Windows App",
  "author": "Renace Tech",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-packager . PrestaPro --platform=win32 --arch=x64 --out=release_portable --overwrite --icon=favicon.ico --ignore=\"^/src|/android|/ios|/.git|/server\"",
    "electron:installer": "vite build && electron-builder -c electron-builder.json"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "@react-oauth/google": "^0.12.2",
    "bcryptjs": "^3.0.3",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.263.1",
    "otp-generator": "^4.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.7.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^4.4.5",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^9.0.3"
  }
}
